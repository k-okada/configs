#!/bin/sh
#

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# update x resources db
xrdb -merge $HOME/.Xresources

# set wallpaper
sh $HOME/.fehbg &

# numlock on
/usr/bin/numlockx &

# hide mouse cursor
/usr/bin/unclutter -visible -noevents &

# compositing
/usr/bin/compton &

# date/time
#/usr/local/bin/dss &

exec dwm 

